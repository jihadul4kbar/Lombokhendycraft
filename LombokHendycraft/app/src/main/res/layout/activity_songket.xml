<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jihad.lombokhendycraft.SongketActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="248dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/songket" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Kerajinan Songket"
            android:textSize="@dimen/textkuran"
            android:padding="@dimen/jarakjudul"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:padding="@dimen/jarakisi"
            android:layout_row="2"
            android:text="@string/songket"
            android:gravity="clip_vertical"/>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/map" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Kampung Sade Kec. Rembitan Kab. Lombok Tengah  dan \nDesa Saukarara Kec. Jonggat Kab. Lombok Tengah - NTB"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:textAlignment="center"
            android:padding="@dimen/jarakisi"
            android:layout_row="4"
            android:text="Produk Kerajinan Songket"
            android:gravity="clip_vertical"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/songketsatu" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/songketdua" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/songkettiga" />

        </LinearLayout>

        <LinearLayout
            android:layout_column="0"
            android:layout_row="6">
            <Button
                android:id="@+id/beranda"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:onClick="Beranda"
                android:text="Sebelumnya" />

            <Button
                android:id="@+id/button3"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="gerabah"
                android:text="Selanjutnya" />
        </LinearLayout>
    </GridLayout>
</ScrollView>
