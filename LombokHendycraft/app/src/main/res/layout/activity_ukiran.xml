<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jihad.lombokhendycraft.SongketActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ukiran"
            android:layout_height="248dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Kerajinan Ukiran"
            android:textSize="@dimen/textkuran"
            android:padding="@dimen/jarakjudul"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:padding="@dimen/jarakisi"
            android:layout_row="2"
            android:text="@string/ukiran"
            android:gravity="clip_vertical"/>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@mipmap/map" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Desa Sesele Kec. Gunung Sari Kab.Lombok Barat \nNusa Tenggara Barat - Indonesia "/>
        </LinearLayout>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:textAlignment="center"
            android:padding="@dimen/jarakisi"
            android:layout_row="4"
            android:text="Produk Kerajinan Ukiran"
            android:gravity="clip_vertical"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cukilsatu" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cukildua" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cukiltiga" />

        </LinearLayout>
        <LinearLayout
            android:layout_column="0"
            android:layout_row="6">



            <Button
                android:id="@+id/beranda"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:onClick="rotan"
                android:text="Sebelumnya" />


        </LinearLayout>
    </GridLayout>
</ScrollView>
